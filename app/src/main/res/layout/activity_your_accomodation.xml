<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/z"
    tools:context="capitalcryptoworld.capitalworld.com.newhajjapp.Activity.YourAccomodation">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="32dp"
    android:orientation="vertical">
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="5"
       android:layout_marginBottom="16dp"
       android:background="@drawable/p1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_name"

            android:textColor="#ff0000"
            android:layout_weight="1"/>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#ff0000"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_price"

            android:textSize="18sp"

            android:textColor="#ff0000"
            android:layout_weight="1"/>




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Feature"
            android:textColor="#ff0000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_feature"

            android:textSize="18sp"
            android:textColor="#ff0000"
            android:layout_weight="1"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#ff0000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_location"
            android:textSize="18sp"


            android:textColor="#ff0000"
            android:layout_weight="1"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textColor="#ff0000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_contact"

            android:textSize="18sp"
            android:textColor="#ff0000"
            android:layout_weight="1"/>




    </LinearLayout>


































</LinearLayout>















</LinearLayout>
