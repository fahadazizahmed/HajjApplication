<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/z"


    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff8d08"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:shadowColor="@android:color/holo_green_dark"
            android:shadowDx="-10"
            android:shadowDy="10"
            android:shadowRadius="20"
            android:text="Registration Form "/>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_weight="1"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shadow"

                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"

                android:orientation="horizontal">



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:id="@+id/et_address"
                    android:inputType="text"
                    android:paddingTop="1dp"
                    android:paddingLeft="16dp"
                    android:hint="Address"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:background="@android:color/transparent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_weight="1"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shadow"

                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">



                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingTop="1dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/et_dob"
                    android:inputType="text"
                    android:editable="false"

                    android:hint="Date of Birth"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/img_date"
                    android:src="@drawable/calen"
                     />




            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
          android:layout_weight="1"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shadow"

                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="1dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/et_phnNumber"
                    android:inputType="phone"

                    android:hint="Phone Number"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_weight="1"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shadow"

                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="1dp"
                    android:paddingLeft="16dp"
                    android:id="@+id/et_province"
                    android:inputType="text"

                    android:hint="Province"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>




















        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_weight="1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shadow"

                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">



                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="1dp"
                    android:paddingLeft="16dp"
                    android:layout_weight="1"
                    android:id="@+id/et_cnic"
                    android:paddingBottom="4dp"
                    android:paddingRight="4dp"


                    android:enabled="false"

                    android:hint="Choose Cnic Picture"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:background="@android:color/transparent" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/img_cnic"

                    android:backgroundTint="@android:color/white"
                    android:src="@drawable/galery" />


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_weight="1"



            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shadow"

                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">



                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                   android:enabled="false"
                    android:id="@+id/et_passPicture"
                    android:inputType="text"
                    android:paddingTop="1dp"
                    android:paddingLeft="16dp"
                    android:layout_weight="1"
                    android:hint="Choose Passport picture"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:paddingBottom="4dp"
                    android:paddingRight="4dp"
                    android:background="@android:color/transparent" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/img_passport"
                    android:src="@drawable/galery"
                    />
            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_weight="1"

            android:orientation="horizontal">



            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radio_group"
                android:layout_weight="1">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:checked="true"


                    android:id="@+id/rd_male"
                    android:textColor="#ffffff"
                    android:buttonTint="#f8c212"


                    android:text="Male"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0.5"
                    android:id="@+id/rd_female"



                    android:textColor="#ffffff"
                    android:buttonTint="#ffffff"
                    android:text="Female"/>
            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1.3"

            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"


            >
            <Button

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="HAJJ REGISTRATION"
                android:id="@+id/btn_registerHajj"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_rounded_corners"

                android:textAllCaps="false"
                android:textColor="#e2e6e7"
                android:textSize="16sp" />


        </LinearLayout>















    </LinearLayout>

</LinearLayout>





